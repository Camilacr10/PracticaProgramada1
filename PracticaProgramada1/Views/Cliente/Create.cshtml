@model PracticaProgramada1BLL.Dtos.ClienteDto

@{
    ViewData["Title"] = "Agregar Cliente";
}

<h2>Agregar Cliente</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>

    <hr class="my-3" />
    <h5>Teléfono principal</h5>

    <div class="form-group">
        <label asp-for="Telefonos[0].Numero">Número</label>
        <input asp-for="Telefonos[0].Numero" class="form-control" placeholder="####-####" />
        <span asp-validation-for="Telefonos[0].Numero" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Telefonos[0].Tipo">Tipo</label>
        <select asp-for="Telefonos[0].Tipo" class="form-control">
            <option value="">-- Seleccione --</option>
            <option>Móvil</option>
            <option>Casa</option>
            <option>Trabajo</option>
        </select>
        <span asp-validation-for="Telefonos[0].Tipo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
