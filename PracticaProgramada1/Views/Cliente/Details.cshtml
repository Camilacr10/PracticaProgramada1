@using PracticaProgramada1BLL.Dtos
@model ClienteDto

@{
    ViewData["Title"] = "Detalle de Cliente";
}

<h1>@ViewData["Title"]</h1>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.Apellido</dd>

            <dt class="col-sm-3">Edad</dt>
            <dd class="col-sm-9">@Model.Edad</dd>
        </dl>
    </div>
</div>

<h5>Teléfonos</h5>
@if (Model.Telefonos != null && Model.Telefonos.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Número</th>
                <th>Tipo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tel in Model.Telefonos)
            {
                <tr>
                    <td>@(tel.Id)</td>
                    <td>@tel.Numero</td>
                    <td>@tel.Tipo</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-muted">Sin teléfonos registrados.</div>
}

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>