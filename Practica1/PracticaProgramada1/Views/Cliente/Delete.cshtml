@model PracticaProgramada1BLL.Dtos.ClienteDto


@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h1>Eliminar Usuario</h1>

<h3>¿Estás seguro de que deseas eliminar este usuario?</h3>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Edad</dt>
        <dd class="col-sm-10">@Model.Edad</dd>

        <dt class="col-sm-2">Telefonos</dt>
        <dd class="col-sm-10">
            @if (Model.Telefonos != null && Model.Telefonos.Any())
            {
                <ul>
                    @foreach (var telefono in Model.Telefonos)
                    {
                        <li>@telefono.Tipo: @telefono.Numero</li>
                    }
                </ul>
            }
            else
            {
                <p>No hay teléfonos disponibles.</p>
			}

    </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
